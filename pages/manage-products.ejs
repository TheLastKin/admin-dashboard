    <script>
        function deleteProduct(outerId, type, id) {
            $.ajax({
                type: "DELETE",
                url: '/delete-product/' + outerId + "/" + type + "/" + id,
                success: function (data) {
                    if (data.status == true) {
                        window.location.href = `/manage-products/${type}`
                    }
                }
            });
        }
        function gotoEdit(outerId, type, id) {
            window.location.href = `/edit-product/${outerId}/${type}/${id}`;
        }
        function getDeviceCount(sel) {
            $.ajax({
                type: "GET",
                url: '/manage-products/' + sel.value ,
                success: function (data) {
              
                    window.location.href = `/manage-products/${sel.value}`
                }
            });
