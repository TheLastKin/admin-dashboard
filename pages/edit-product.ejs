    <script>
        function onImageSelected(e){
            const file = e.files[0];
            if(file){
                const reader = new FileReader();
                reader.onload = (e) => {
                    document.getElementById("display-image").src = e.target.result;
                }
                reader.readAsDataURL(file)
            }
        }
        function goBack(){
            window.location.href = "/manage-products"
        }
    </script>
