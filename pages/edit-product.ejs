                            <div class="card">
                              <div class="card-body">
                                <h4 class="card-title">Sửa sản phẩm</h4>
                                <form action="/edit-product/<%= outerId %>/<%= type %>/<%= id %>" class="forms-sample" method="POST" enctype="multipart/form-data">
                                  <div class="form-group row">
                                    <label for="product-name" class="col-sm-3 col-form-label">Tên Sản Phẩm</label>
                                    <div class="col-sm-9">
                                      <input type="text" class="form-control" name="name" id="product-name" placeholder="Tên sản phẩm" value="<%= product.name %>" required>
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label for="product-email" class="col-sm-3 col-form-label">Giá</label>
                                    <div class="col-sm-9">
                                      <input type="number" class="form-control" name="price" id="product-email" placeholder="Giá" value="<%= product.price %>" required>
                                    </div>
                                  </div>
                                  <div class="form-group row">
                                    <label for="product-image" class="col-sm-3 col-form-label">Ảnh</label>
                                    <div class="col-sm-9">
                                      <img style="max-width: 500px;" id="display-image" src="<%= product.image %>" alt="">
                                      <input type="file" class="form-control" name="image" id="product-image" onchange="onImageSelected(this)">
                                    </div>
                                  </div>
                                  <button type="submit" class="btn btn-primary mr-2">Cập nhật</button>
                                  <button class="btn btn-dark" onclick="goBack()">Quay lại</button>
                                </form>
