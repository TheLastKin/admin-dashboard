    <script>
        function viewProducts(product) {
            const products = JSON.parse(product);
            let tableRows = "";
            for (let p of products) {
                tableRows += `<tr>
                    <td class="text-center">${p.ProductName}</td>
                    <td class="text-center">${p.ProductPrice}</td>
                    <td class="text-center"><img style="width: 100px; height: 100px;" class="product-image" src="${p.ProductImage}"></td>
                    <td class="text-center">${p["Product Color"]}</td>
                    <td class="text-center">${p.ProductQuetity}</td>
                    <td class="text-center">${p["Product Size"]}</td>
                    </tr>`
            }
            document.getElementById("products").innerHTML = tableRows;
        }
        function updateOrderStatus(orderId, status) {
            $.ajax({
                url: "/update-order-status",
                method: "POST",
                data: { id: orderId, status: status },
                success: (data) => {
                    if (data.status) {
                        location.reload();
                    }
                }
            })
        }
        function gotoEdit(outerId, type, id) {
            window.location.href = `/edit-product/${outerId}/${type}/${id}`;
        }
