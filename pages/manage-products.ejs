                                    <div class="col-sm-9">
                                        <select name="category" id="category" onchange="getDeviceCount(this)">
                                            <% var options = [{title: "Sản phẩm nổi bật",value: "featureproduct"}, {title:"Sản phẩm mới",value: "newachives"}]; %>
                                            <% for(var i = 0; i < options.length; i++) {
                                                var selected = ( options[i].value == data[0].type ) ? "selected" : ""; %>
                                              <option value='<%= options[i].value %>' <%=selected %>><%= options[i].title %></option>
                                            <% } %>
                                          </select>
                                         
                                    </div>
                                </form>
                                    <div class="table-responsive">
                                        <table class="table ">
                                            <thead>
                                                <tr>
                                                    <th>Tên Sản Phẩm</th>
                                                    <th>Giá (USD)</th>
                                                    <th>Giá Mua Vào (USD)</th>
                                                    <th>Số lượng</th>
                                                    <th class="text-center">Ảnh</th>
                                                    <th class="text-center">Hành Động</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% data.forEach(p=>{%> <tr>
                                                        <td>
                                                            <%= p.name %>
                                                        </td>
                                                        <td>$<%= p.price %>
                                                           

                                                        </td>
                                                        <% if(p.purchaseprice){ %>
                                                            <td>$<%= p.purchaseprice %></td>
                                                          <% } else{ %>  
                                                            <td>Chưa cập nhật</td>
                                                         <% } %>
                                                         <% if(p.quantily === 0){ %>
                                                            <td>hết hàng</td>
                    
                                                          <% } else{ %>  
                                                            <td>Hàng tồn kho (<%= p.quantily %>)</td>
                                                         <% } %>
                                                        <td class="d-flex justify-content-center">
                                                            <img style="width: 100px; height: 100px"
                                                                src="<%= p.image %>">
                                                        </td>
                                                        <td>
                                                            <div class="d-flex justify-content-center">
                                                                <button type="button" class="btn btn-success"
                                                                    onclick="gotoEdit('<%= p.outerId %>', '<%= p.type %>', '<%=p.id%>')">Sửa
                                                                    sản phẩm</button>
                                                                <button type="button" class="btn btn-danger ml-1"
                                                                    onclick="deleteProduct('<%= p.outerId %>', '<%= p.type %>', '<%=p.id%>')">Xoá</button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <%}) %>
                                            </tbody>
                                        </table>
